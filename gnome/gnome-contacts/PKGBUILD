# Contributor: Ionut Biru <ibiru@archlinux.org>

pkgname=gnome-contacts
pkgver=44.beta+3758+36fdf894
pkgrel=1
pkgdesc="Contacts Manager for GNOME"
url="https://wiki.gnome.org/Apps/Contacts"
arch=(x86_64)
license=(GPL2)
depends=(gtk3 folks gnome-desktop dconf gnome-online-accounts libgee cheese
         libhandy)
makedepends=(vala gobject-introspection git meson appstream-glib)
groups=(gnome)
source=("git+https://gitlab.gnome.org/GNOME/gnome-contacts.git")
sha256sums=('SKIP')

pkgver() {
    cd ${pkgname}

    local _version=$(cat meson.build | grep "version:" | sed -n 1p | cut -d "'" -f2 | cut -d "'" -f1)

    echo ${_version}+$(git rev-list --count HEAD)+$(git rev-parse --short HEAD)
}


build() {
    export CC=gcc
    export CXX=gcc++

	arch-meson $pkgname build \
		-D manpage=false

	ninja -C build
}

package() {
	DESTDIR="$pkgdir" meson install -C build
}
