# Maintainer: Fabian Bornschein <fabiscafe-cat-mailbox-dog-org>
# Contributor: Jan Alexander Steffens (heftig) <heftig@archlinux.org>

pkgname=gnome-weather
pkgver=44.rc+1412+071a8a9
pkgrel=1
pkgdesc="Access current weather conditions and forecasts"
url="https://wiki.gnome.org/Apps/Weather"
arch=(any)
license=(GPL)
depends=(gjs libgweather-4 geoclue libadwaita)
makedepends=(gobject-introspection appstream-glib git meson)
groups=(gnome)
source=("git+https://gitlab.gnome.org/GNOME/gnome-weather.git")
sha256sums=('SKIP')

pkgver () {
    cd ${pkgname}

    local _version=$(cat meson.build | grep "version:" |  head -n 1 | cut -d "'" -f2 | cut -d "'" -f1)

    echo ${_version}+$(git rev-list --count HEAD)+$(git rev-parse --short HEAD)
}

build() {
  arch-meson $pkgname build
  
  meson compile -C build
}

package() {
  meson install -C build --destdir "$pkgdir"
}

