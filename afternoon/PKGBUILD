pkgname=afternoon
pkgdesc="Papers is a document viewer for PDF and other document formats aimed at the GNOME desktop"
license=(GPL-2.0-or-later)

arch=(x86_64)
pkgver=47.alpha+108+2c7a942
pkgrel=1

url=https://gitlab.gnome.org/GNOME/Incubator/afternoon

depends=()

makedepends=(
	git
	meson
)

b2sums=(SKIP)
source=(git+https://gitlab.gnome.org/gnome/incubator/afternoon.git#branch=main)

pkgver() {
	cd $pkgname
	
	local _version=$(grep -m 1 version meson.build | awk -F"'" '{print $2}')
	local _commits=$(git rev-list --count HEAD)
	local _commith=$(git rev-parse --short HEAD)
	
	echo ${_version}+${_commits}+${_commith}
}

build() {
	local options=(
	)

	arch-meson $pkgname build "${options[@]}"
	
	meson compile -C build
}

package() {
	meson install -C build --destdir "$pkgdir"
}
