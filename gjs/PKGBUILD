# Contributor: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>
# Contributor: Ionut Biru <ibiru@archlinux.org>

pkgname=gjs
pkgdesc="Javascript Bindings for GNOME"
license=(GPL)

arch=(x86_64)
pkgver=1.79.1+5350+0249c5e2
pkgrel=6

url="https://wiki.gnome.org/Projects/Gjs"

depends=(
  cairo
  dconf
  glib2
  gobject-introspection-runtime
  js102
  js115
  libffi
  libgirepository
  libsysprof-capture
  libx11
  readline
)

makedepends=(
  dbus
  git
  gobject-introspection
  meson
)

b2sums=(SKIP)
source=(git+https://gitlab.gnome.org/GNOME/gjs.git#branch=master)
provides=(libgjs.so)

pkgver() {
    cd $pkgname
    
    local _version=$(grep -m 1 "version:" meson.build | cut -d "'" -f 8)
    local _commits=$(git rev-list --count HEAD)
    local _commith=$(git rev-parse --short HEAD)

    echo ${_version}+${_commits}+${_commith}
}

build() {
	local meson_options=(
		-D cairo=enabled
		-D readline=enabled
    -D profiler=disabled
    -D installed_tests=false
    -D dtrace=false
    -D systemtap=false
    -D bsymbolic_functions=true
    -D skip_dbus_tests=true
    -D skip_gtk_tests=true
    -D verbose_logs=false
	)

	arch-meson $pkgname build "${meson_options[@]}"
	meson compile -C build
}

package() {
    meson install -C build --destdir "$pkgdir"
}
