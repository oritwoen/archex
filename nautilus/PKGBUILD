pkgname=nautilus
pkgdesc="Default file manager for GNOME"
license=(GPL)

arch=(x86_64)
pkgrel=1
pkgver=45.rc+24169+e4bc182d4

url="https://wiki.gnome.org/Apps/Files"

depends=(dconf gdk-pixbuf2 gnome-autoar gnome-desktop-4 gst-plugins-base-libs gvfs libadwaita libcloudproviders libgexiv2 libportal-gtk4 tracker3)
makedepends=(appstream-glib gi-docgen git gobject-introspection meson tracker3-miners)

b2sums=(SKIP)
groups=(gnome-apps)
source=(git+https://gitlab.gnome.org/GNOME/nautilus.git#branch=main)

provides=(libnautilus-extension)
replaces=(libnautilus-extension)
conflicts=(libnautilus-extension)

pkgver() {
    cd $pkgname
    
    local _version=$(grep -m 2 version meson.build | awk -F"'" 'NR==2 {print $2}')
    local _commits=$(git rev-list --count HEAD)
    local _commith=$(git rev-parse --short HEAD)

    echo ${_version}+${_commits}+${_commith}
}

build() {
    CFLAGS+=" -Wno-error=int-conversion -Wno-error=return-type"

    arch-meson $pkgname build \
      -D tests=none

    meson compile -C build
}

package () {
    meson install -C build --destdir "$pkgdir"
}
