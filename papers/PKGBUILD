pkgname=papers
pkgdesc="Papers is a document viewer for PDF and other document formats aimed at the GNOME desktop"
license=(GPL-2.0-or-later)

arch=(x86_64)
pkgver=46.1+9794+ec58ddea
pkgrel=1

url=https://gitlab.gnome.org/GNOME/Incubator/papers

depends=()

makedepends=(
	git
	meson
)

b2sums=(SKIP)
source=(git+https://gitlab.gnome.org/gnome/incubator/papers.git#branch=main)

pkgver() {
	cd $pkgname
	
	local _version=$(grep -m 1 version meson.build | awk -F"'" '{print $2}')
	local _commits=$(git rev-list --count HEAD)
	local _commith=$(git rev-parse --short HEAD)
	
	echo ${_version}+${_commits}+${_commith}
}

build() {
	local options=(
		-D tests=false
		-D gtk_doc=false
		-D user_doc=false
	)

	arch-meson $pkgname build "${options[@]}"
	
	meson compile -C build
}

package() {
	meson install -C build --destdir "$pkgdir"
}
