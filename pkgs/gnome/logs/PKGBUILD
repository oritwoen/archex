pkgname=logs

arch=(x86_64)
pkgver=45.0+1360+699e519
pkgrel=31

b2sums=(SKIP)
source=(git+https://gitlab.gnome.org/gnome/gnome-logs.git)

replaces=(gnome-logs)

depends=(
	gtk4

	libadwaita
)

makedepends=(
	git
	meson
	itstool
)

pkgver() {
	cd gnome-logs

	local _version=$(grep -m 1 version meson.build | awk -F"'" '{print $6}')
	local _commits=$(git rev-list --count HEAD)
	local _commith=$(git rev-parse --short HEAD)
	
	echo ${_version}+${_commits}+${_commith}
}

build() {
	arch-meson gnome-logs build

	meson compile -C build
}

package() {
	meson install -C build --destdir ${pkgdir}
}
