pkgname=files

arch=(x86_64)
pkgrel=19
pkgver=48.alpha+25541+cfca36a69

b2sums=(SKIP)
source=(git+https://gitlab.gnome.org/gnome/nautilus.git)

depends=(
	gnome-autoar
	gnome-desktop-4

	libportal
	libportal-gtk4

	libadwaita
)

makedepends=(
	git
	meson
)

#provides=(nautilus libnautilus-extension)
replaces=(nautilus libnautilus-extension)

pkgver() {
	cd nautilus

	local _version=$(grep -m 1 version meson.build | awk -F"'" '{print $2}')
	local _commits=$(git rev-list --count HEAD)
	local _commith=$(git rev-parse --short HEAD)

	echo ${_version}+${_commits}+${_commith}
}

build() {
	local options=(
		-D extensions=false #TODO: verify
		-D introspection=false #TODO: verify

		-D packagekit=false
		-D cloudproviders=false #TODO: verify

		-D tests=none
	)
	
	arch-meson nautilus build ${options[@]}
	
	meson compile -C build
}

package () {
	meson install -C build --destdir ${pkgdir}
}
