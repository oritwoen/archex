pkgname=nautilus

arch=(x86_64)
pkgrel=1
pkgver=47.1+25531+88b8f9d5b

b2sums=(SKIP)
source=(git+https://gitlab.gnome.org/gnome/nautilus.git)

provides=(libnautilus-extension)
replaces=(libnautilus-extension)
conflicts=(libnautilus-extension)

pkgver() {
	cd $pkgname

	local _version=$(grep -m 1 version meson.build | awk -F"'" '{print $2}')
	local _commits=$(git rev-list --count HEAD)
	local _commith=$(git rev-parse --short HEAD)

	echo ${_version}+${_commits}+${_commith}
}

build() {
	CFLAGS+=" -Wno-error=sometimes-uninitialized"

	local meson_options=(
		-D tests=none
	)
	
	arch-meson $pkgname build "${meson_options[@]}"
	
	meson compile -C build
}

package () {
	meson install -C build --destdir "$pkgdir"
}
